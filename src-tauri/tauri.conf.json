{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "openscribe",
  "version": "0.1.0",
  "identifier": "com.openscribe",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "OpenScribe",
        "label": "main",
        "width": 1024,
        "height": 768,
        "visible": false
      },
      {
        "title": "OpenScribe",
        "label": "splashscreen",
        "width": 400,
        "height": 300,
        "decorations": false,
        "resizable": false,
        "transparent": false,
        "center": true,
        "url": "/splashscreen.html"
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$TEMP/**", "$APPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
